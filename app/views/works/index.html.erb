<p id="notice"><%= notice %></p>

<h1>Listing Works</h1>

<table>
  <thead>
    <tr>
      <th>Hiduke</th>
      <th>Staff</th>
      <th>Constraction</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Work time</th>
      <th>Over time</th>
      <th>Night time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.hiduke %></td>
        <td><%= work.staff_id %></td>
        <td><%= work.constraction_id %></td>
        <td><%= work.start_time %></td>
        <td><%= work.end_time %></td>
        <td><%= work.work_time %></td>
        <td><%= work.over_time %></td>
        <td><%= work.night_time %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

